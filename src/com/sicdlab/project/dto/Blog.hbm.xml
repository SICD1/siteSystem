<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlab.project.dto">
    <class name="Blog" table="tb_blog">
        <id name="blogID" type="java.lang.String" column="blogID">
            <generator class="uuid"/>
        </id>
        <property name="blogContent" type="java.lang.String" column="blogContent" />
        <property name="blogTitle" type="java.lang.String" column="blogTitle" />
        <property name="blogTime" type="java.util.Date" column="blogTime" />
        <property name="praiseNumber" type="java.lang.Integer" column="praiseNumber" />
        <property name="commentNumber" type="java.lang.Integer" column="commentNumber" />
        <property name="forwardNumber" type="java.lang.Integer" column="forwardNumber" />
        <property name="shareNumber" type="java.lang.Integer" column="shareNumber" />
        <property name="blogShow" type="java.lang.Boolean" column="blogShow" />
        <property name="blogClassifyName" type="java.lang.String" column="blogClassifyName" />
    </class>
</hibernate-mapping>